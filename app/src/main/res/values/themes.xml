<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme -->
    <style name="Theme.TKM" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.TKM.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/splash_screen</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.TKM.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.TKM.Sign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.TKM.Home" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
